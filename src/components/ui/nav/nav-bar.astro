---
import NavBarWrapper from "@/components/ui/nav/nav-bar-wrapper.astro";
import NavWrapper from "@/components/ui/nav/nav-wrapper.astro";
import NavFlexWrapper from "@/components/ui/nav/nav-flex-wrapper.astro";
import NavBarMain from "@/components/ui/nav/nav-bar-main.astro";
import NavBarRight from "@/components/ui/nav/nav-bar-right.astro";
import NavButtons from "@/components/ui/nav/nav-buttons.astro";
import {
  barButtonMobile,
  barButtonMobileExtra,
  barMobileButtonWrapper,
  barMobileMenuItemsWrapper,
} from "@/components/ui/nav/nav.css";
---

<NavWrapper style="width: 100%;">
  <NavBarWrapper>
    <NavFlexWrapper>
      <NavBarMain><slot /></NavBarMain>
      <NavBarRight>Right Bar</NavBarRight>
    </NavFlexWrapper>
  </NavBarWrapper>
  <!-- Mobile menu, show/hide based on menu state. TODO: Create menu for click control of display: none -->
  <div class:list={[barMobileButtonWrapper]}>
    <NavButtons class:list={[barMobileMenuItemsWrapper]}>
      <a href="#" class:list={[barButtonMobile, barButtonMobileExtra]}
        >Button1</a
      >
      <a href="#" class:list={[barButtonMobile, barButtonMobileExtra]}
        >Button2</a
      >
      <a href="#" class:list={[barButtonMobile, barButtonMobileExtra]}
        >Button3</a
      >
    </NavButtons>
  </div>
</NavWrapper>
