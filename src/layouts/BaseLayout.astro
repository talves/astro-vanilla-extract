---
import {
  container,
  contentWrapper,
  footer,
  intro,
  wrapper,
} from "@/layouts/BaseLayout.css";
import "@/styles/fonts.css";
import "@/styles/preflight.css";
import "@/styles/global.css";
import { lightThemeClass } from "@/styles/themes.css";

export interface Props {
  description: string;
  title: string;
}

const { description, title } = Astro.props as Props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" href="/icon.svg" type="image/svg+xml" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/manifest.webmanifest" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class:list={[container, lightThemeClass]}>
    <div class:list={[wrapper]}>
      <main class:list={[contentWrapper]}>
        <h1>{title}</h1>
        <p class:list={[intro]}>Here&rsquo;s the latest theme&hellip;</p>
        <hr />
        <slot />
      </main>
      <footer class:list={[contentWrapper, footer]}>
        <hr />
        <p>You can <a href="#">unsubscribe here</a><sup>2</sup>.</p>
        <p><code> var this = "this is this"</code></p>
      </footer>
    </div>
  </body>
</html>
